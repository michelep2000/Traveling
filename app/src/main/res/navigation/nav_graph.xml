<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/onboardingFragment"
        android:name="es.travelworld.traveling.OnBoardingFragment"
        android:label="onboarding_fragment"
        tools:layout="@layout/onboarding_fragment" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="es.travelworld.traveling.HomeFragment"
        android:label="home_fragment"
        tools:layout="@layout/home_fragment" >
        <action
            android:id="@+id/action_homeFragment_to_lilaFragment"
            app:destination="@id/lilaFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="es.travelworld.traveling.LoginFragment"
        android:label="login_fragment"
        tools:layout="@layout/login_fragment" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="es.travelworld.traveling.RegisterFragment"
        android:label="register_fragment"
        tools:layout="@layout/register_fragment" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/lilaFragment"
        android:name="es.travelworld.traveling.LilaFragment"
        android:label="fragment_lila"
        tools:layout="@layout/fragment_lila" />
</navigation>